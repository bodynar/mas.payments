doctype html

.mt-2.container.row
    .form-group.col-2.p-0.mr-3
        label From
        app-month-selector(
            startYear='2009',
            [(year)]='statisticsFilter.from.year',
            [(month)]='statisticsFilter.from.month',
            canClear='true'
        )
    .form-group.col-2.p-0.mr-3
        label To
        app-month-selector(
            startYear='2009',
            [(year)]='statisticsFilter.to.year',
            [(month)]='statisticsFilter.to.month',
            canClear='true'
        )
    .form-group.col-3
        label(for='type') Payment type
        select.form-control-sm.form-control#type(
            name='paymentType',
            [(ngModel)]='statisticsFilter.paymentTypeId',
            required='required'
        )
            option(
                *ngFor='let paymentType of paymentTypes',
                [ngValue]='paymentType.id'
            ) {{ paymentType.name }}
    .form-group.ml-auto.justify-content-around.d-flex.flex-column
        button.btn.btn-primary(
            type='button',
            style='margin-left: auto',
            [attr.disalbed]='chartDataIsLoading',
            [class.disabled]='chartDataIsLoading',
            (click)='onFormSubmit()'
        ) Display data

div.mt-3.loading-cover
    .loading-cover_image-container.loading-cover_image-container--center(
        *ngIf='chartDataIsLoading'
    )
        img.loading-cover_image-container_img(
            alt='loading..',
            src='assets/images/loading-01.svg',
        )
    .loading-cover_content(
        [attr.data-disabled]='chartDataIsLoading'
    )
        app-stats-chart(
            [series]='chart.series',
            [xaxis]='chart.xaxis',
            [title]='chart.title'
        )