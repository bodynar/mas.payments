@import '../../../../../common/styles/colors.styl'

.payment
    display grid
    grid-template-columns 0.15fr 0.25fr 0.3fr 0.25fr 1fr 0.25fr
    gap: 0.5em
    grid-template-areas "Year Month Type Amount Comment Actions"

    box-shadow 0px 0px 2px 0px rgba(0, 0, 0, 0.25)
    padding 1em 1.2em
    margin-bottom 1em
    align-items center
    
    &:hover
        box-shadow 0px 0px 2px 0px rgb(69, 212, 222, 0.25)

    & > *:not(&__actions) 
        justify-self center

    &__year
        grid-area Year

    &__month
        grid-area Month

    &__type
        grid-area Type

        .app-badge
            &.house
                border-color color-green-swamp-dark
                &:hover
                    background-color color-green-swamp-dark
                    color color-white-paint
            &.electricity
                border-color color-blue-sky
                &:hover
                    background-color color-blue-sky
                    color color-white-paint

    &__amount
        grid-area Amount

    &__comment
        grid-area Comment
        word-break break-word

    &__actions
        grid-area Actions
        align-self center
        display flex
        justify-content space-around