@import '../../../../common/styles/colors.styl'

.type-list-item
    display grid
    grid-template-columns 1fr repeat(2, 0.25fr)
    grid-template-rows 0.25fr 0.5fr
    grid-gap 0 1.5em
    grid-template-areas "Name PaymentType Actions" "Description PaymentType Actions"

    align-items center

    margin 0.5em 0
    padding 0.75em 1.2em

    box-shadow 0px 0px 2px 0px rgba(0, 0, 0, 0.25)
    cursor default

    &:hover
        box-shadow 0px 0px 2px 0px rgb(69, 212, 222, 0.25)
    .name
        grid-area Name
        display flex
        align-items center
        span.color
            width 1.5em
            height 1.5em
            border 1px solid black
            display block
        h5
            margin 0 0.5em
            padding 0
    .description
        grid-area Description
        margin 0
        padding 0
        white-space pre-line
        word-break break-word
    .payment-type
        grid-area PaymentType
        justify-self center
    .actions
        grid-area Actions
        display flex
        justify-content space-around