@import '../../../../../common/colors.styl'

.measurement
    display flex
    flex-direction column

    .info
        display flex
        flex-direction row
        align-items center
        padding-bottom 0.5em

        .date
            width 10em
    
        .value
            margin 0 5px
            width 5em
            
            &:before
                content ' - '

        &:hover
            .app-badge
                background-color color-blue-sea
                color color-white-paint