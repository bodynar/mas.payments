@import '../../../../common/styles/colors.styl'

.measurement
    display grid
    grid-template-columns minmax(min-content, max-content) 0.5fr 0.1fr 1.25fr 0.5fr
    grid-template-rows 1fr
    gap 1em
    grid-template-areas "Flag Type Measurement Comment Actions"

    box-shadow 0px 0px 2px 0px rgba(0, 0, 0, 0.25)
    align-items center

    margin-bottom 1em
    padding 0.5em 0

    &--single
        grid-template-columns minmax(min-content, max-content) 0.25fr 0.5fr 0.1fr 1.25fr 0.5fr
        grid-template-areas "Flag Date Type Measurement Comment Actions"

    &--single &__date
        display block

    &:hover
        box-shadow 0px 0px 2px 0px rgb(69, 212, 222, 0.25)

    &--flagged
        padding-left 1em

    &__date
        grid-area Date
        display none

    &__flag
        grid-area Flag
        align-self center

        &--clear .custom-control-label::before
            background-color rgba(0, 123, 255, 0.5)

    &__type
        grid-area Type

    &__value
        grid-area Measurement

    &__comment
        grid-area Comment

        p
            margin 0
            padding 0
            word-break break-word

    &__actions
        grid-area Actions
        align-self center
        display flex
        justify-content space-around