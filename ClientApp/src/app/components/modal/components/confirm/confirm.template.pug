doctype html

.modal-header
    h4.modal-title {{ title }}
    button.close(
        type='button',
        aria-label='close',
        (click)='modalService.close(false)',
        style='outline: none;'
    )
        span(aria-hidden='true') &times;
.modal-body
    div {{ modalBody }}
.modal-footer
    button.btn.btn-outline-danger(
        type='button',
        (click)='modalService.close(false)'
    ) {{ cancelBtnText }}
    button.btn.btn-outline-success(
        type='button',
        (click)='modalService.close(true)'
    ) {{ confirmBtnText }}