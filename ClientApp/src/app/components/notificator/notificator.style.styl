@import '../../../common/styles/colors.styl';

background-opacity = 0.65

.notifications
    width 15vw
        
    position fixed
    top 4em
    right 1em

    z-index 999

.notification
    color color-black-pearl
    background-color rgba(176, 196, 201, background-opacity)// color-gray-asphalt-wet

    padding 0.7em
    margin-bottom 1em

    border-radius 6px

    display flex
    flex-direction column

    box-shadow 0 0 20px 2px rgba(0, 0, 0, 0.2)

    &:last-of-type
        -webkit-animation fadein 0.5s
        animation fadein 0.5s
        animation-iteration-count 1

    &-header
        font-weight bold
        font-size 14px

    &-body
        font-size small

    &.error
        background-color rgba(226, 90, 83, background-opacity) // color-red-fiery-coral
    &.warning
        background-color rgba(255, 218, 119, background-opacity) // color-orange-honey
    &.info
        background-color rgba(65, 206, 226, background-opacity) // color-blue-sea-wave-light
    &.success
        background-color rgba(153, 216, 21, background-opacity) // color-green-slime

.close
    user-select none
    cursor pointer

@-webkit-keyframes fadein
  from 
    opacity 0
  to 
    opacity 1

@keyframes fadein 
  from 
    bottom 0
    opacity 0
  to 
    bottom 30px
    opacity 1