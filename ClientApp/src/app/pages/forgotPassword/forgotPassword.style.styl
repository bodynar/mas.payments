body
    margin 0
    height 100vh
    width 100vw
    color #61dafb !important
    overflow hidden

.background 
    left -4px
    top -4px
    bottom -4px
    position fixed
    right -4px
    filter blur(4px)
    margin -4px

.bg-image 
    background-image url(/images/background/background-02.jfif)
    height 100%
    overflow-y hidden
    background-position center
    background-repeat no-repeat
    background-size cover

.form-container 
    width 40vw
    position relative
    margin 5em

button.m-btn-primary,
button.m-btn-primary:not(:disabled):not(.disabled):active,
button.m-btn-primary:hover 
    color #000
    background-color #61dafb
    border-color #61dafb

button.m-btn-primary:focus,
button.m-btn-primary:not(:disabled):not(.disabled):active:focus 
    box-shadow 0 0 0 0.2rem rgba(97, 218, 251, 0.55)


input.m-form-control:focus 
    border-color #61dafb
    box-shadow 0 0 0 0.2rem rgba(97, 218, 251, 0.5)